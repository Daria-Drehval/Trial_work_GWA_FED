<script src="{{ 'lazysizes.min.js' | asset_url }}" async></script>

{%- if request.page_type contains 'product' -%}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  <script>
    jQuery(function() {
      jQuery('.swatch :radio').change(function() {
        var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
        var optionValue = jQuery(this).val();
        jQuery(this)
            .closest('form')
            .find('.single-option-selector')
            .eq(optionIndex)
            .val(optionValue)
            .trigger('change');
      });
    });
  </script>
  <script src="{{ 'jquery.elevatezoom.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if request.page_type contains 'collection' -%}
  <script src="{{ 'jquery-ui.min.js' | asset_url }}" defer></script>
{%- endif -%}

{%- if content_for_layout contains 'parallax_block-js' or content_for_layout contains 'parallax-scene' -%}
  <script src="{{ 'parallax.min.js' | asset_url }}" defer></script>
{%- endif -%}


{%- if request.page_type contains 'blog' -%}
